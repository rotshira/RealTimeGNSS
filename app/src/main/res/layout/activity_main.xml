<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/latitude_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/longitude_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/altitude_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altitude: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pseudorange_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pseudo-Range: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cn0_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CN0: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/doppler_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doppler: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/x_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/y_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/z_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z: "
            android:textSize="18sp" />




    </LinearLayout>
</ScrollView>
